<div class="poke-card">
  <div class="poke-name">
    <%= poke.name %>
  </div>
  <%= link_to poke do %>
    <%= image_tag animation poke %>
  <% end %>

  <% if show_all %>
    <div class="flex-container">
      <h2> Types: </h2>
      <div class="badges-container">
        <% poke.poke_types.each do |p_types| %>
          <%= type_badge @view_context, p_types.name %>
        <% end %>
      </div>
    </div>
    <div class="flex-container">
      <h2> Abilities: </h2>
      <div class="badges-container">
        <% poke.abilities.each do |p_ability| %>
          <%= random_badge @view_context, p_ability.name %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
