<div class="avatar-trainer">
  <div class="avatar-info">
    <h2> <%= trainer.name %> </h2>
      <%= link_to trainer do %>
        <p> Total pokemons: <%= trainer.pokemons.count %> </p>
      <% end %>
  </div>
    <div class="avatar-info">
      <%= set_link_state link:(link_to 'Edit', edit_trainer_path(trainer)),
        view_context: @view_context,
        current_user: current_trainer, 
        user: trainer,
        text: 'Edit'
      %>
      <%= set_link_state link:(link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' }),
        view_context: @view_context,
        current_user: current_trainer, 
        user: trainer,
        text: 'Destroy'
      %>
    </div>
</div>
